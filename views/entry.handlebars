<div class="card mb-6">
  <header class="card-header card-header-title">
        <div class="column">
      <a href="/entry/{{entry.id}}" class="">{{entry.title}}</a></p>
      </div>
  </header>
    <div class="card-content">
        <div class="content">
            {{entry.entry_content}}
        </div>
           <div class="card-footer">
            <h6>Comments:</h6>
            <ul class="list-group">

                {{#each entry.comments as |comment|}}                          
                  <li class="list-group-item">
                    <div>
                        <p>{{comment.comment_content}}</p>
                       <p>By: {{comment.user.username}} on {{format_date comment.createdAt}}</p>
                    </div>
                </li>    
                {{/each}}
            </ul> 
        </div>   
    </div>
</div>
</section>
{{#if loggedIn}}
Leave a comment: 

<form class="comment-form">
  <div>
    <textarea class="ml-5" rows="3" name="comment-content"></textarea>
  </div>
  <div>
    <button class="button" type="submit">Post Comment</button>
  </div>
  <button class="button" type="submit">Logout</button>
</form>
{{/if}}

{{#if loggedIn}}
<script src="/js/comment.js"></script>
{{/if}}