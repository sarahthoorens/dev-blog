 <div class="card">
      <div class="card-header">
         Create New Post
      </div>
      <form class='new-entry-form'></form>
      <div class="card-body">
         <h5 class="card-title" id="entry_title">Title</h5>
         <div class="input-group mb-3 pb-4">
            <textarea class="form-control" aria-label="Small" placeholder="Enter title">{{title}}</textarea>
         </div>
         <h5 class="card-title">Content</h5>
         <div class="input-group pb-4">
            <textarea class="form-control" id="entry_content" aria-label="Start typing"
               placeholder="Start typing...">{{content}}</textarea>
         </div>
         <div class="input-group pb-4">
            <textarea class="form-control" id="author_name" aria-label="Start typing"
               placeholder="Author Name">{{username}}</textarea>
         </div>
         <button type='submit' value='Submit' class="btn btn-primary px-1">Post</button>
      </div>
   </div>
</div>
