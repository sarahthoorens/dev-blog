<div class="container-fluid mt-5">
<div class="card mb-3 mx-auto" style="max-width: 30rem;">
     <div class="card-header">
   Log In
  </div>
<form class="form login-form">
  <div class="form-group px-5">
    <label for="email-login">Email address</label>
    <input type="email" class="form-control" id="email-login" placeholder="Enter email">
    <small id="email" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group px-5">
    <label for="password-login">Password</label>
    <input type="password" class="form-control" id="password-login" placeholder="Password">
   <button type="submit" class="btn btn-primary mt-4">Submit</button>
  </div>
</form>
<a href="/signup"><button type="submit" class="btn btn-dark px-3" id="signup-button">Sign up instead</button></a>
</div>
</div>

<script src="./js/login.js"></script>