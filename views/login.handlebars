<div class="container-fluid mt-5 row justify-content-evenly">

<div class="card mb-3 mx-auto col" style="max-width: 30rem;">
   <div class="card-header mb-3 p-4">
      <h2 class="title">Login</h2>
    </div>
  <form class="login-form">
  <div>
    <label for="email-login">Email: </label>
    <input type="email" autocomplete="email" id="email-login" />
  </div>
  <div>
    <label for="password-login">Password: </label>
    <input type="password" autocomplete="current-password" id="password-login" />
  </div>
  <div>
    <button type="submit" class="button" id="login-btn">Login</button>
  </div>
</form>
</div>



<div class="card mb-3 mx-auto col" style="max-width: 30rem;">
   <div class="card-header mb-3 p-4">
    <h2>Sign Up</h2>
  </div>
<form class="signup-form">
  <div>
    <label for="username-signup">Username</label>
    <input type="text" autocomplete="username" id="username-signup" />
  </div>
  <div>
    <label for="email-signup">Email: </label>
    <input type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup">Password: </label>
    <input type="password" autocomplete="current-password" id="password-signup" />
  </div>
  <div>
    <button type="submit" class="button" id="signup-btn">Sign Up</button>
  </div>
</form>
</div>
</div>

<script src="./js/login.js"></script>