 <div class="card">
      <div class="card-header">
         Create New Post
      </div>
      <form id="edit-entry-form" class="card-body">
      <input type="hidden" name="entry-id" value="{{.id}}" >
      <div class="card-body">
         <h5 class="card-title" id="entry_title">Title</h5>
         <div class="input-group mb-3 pb-4">
            <textarea class="form-control" aria-label="Small" placeholder="Enter title">{{entry.title}}</textarea>
         </div>
         <h5 class="card-title">Content</h5>
         <div class="input-group pb-4">
            <textarea class="form-control" id="entry_content" aria-label="Start typing"
               placeholder="Start typing...">{{entry.body}}</textarea>
         </div>
         <div class="input-group pb-4">
            <textarea class="form-control" id="author_name" aria-label="Start typing"
               placeholder="Author Name"></textarea>
         </div>
          </form>
           <button type='submit' value='Submit' class="btn btn-primary px-1">Update Entry</button>
         <button type='submit' value='Submit' class="btn btn-primary px-1">Delete Entry</button>
      </div>
   </div>
</div>

<script src="/js/edit.js"></script>
